{
  "expo": {
    "name": "LearnLocal",
    "slug": "learn-local-native",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/learl.png",
    "scheme": "learnlocalnative",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/learl.png",
        "backgroundColor": "#4B2ACF"
      },
      "edgeToEdgeEnabled": true,
      "statusBarColor": "#3D0DBD",
      "navigationBarColor": "#3D0DBD",
      "statusBarStyle": "light"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/learl.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/learl.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#3D0DBD"
        }
      ],
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
